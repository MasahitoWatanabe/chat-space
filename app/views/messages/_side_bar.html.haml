%html
  %body  
    .side-bar
      .side-header
        .side-box
          %p.user-name 
            = current_user.name
          %ul.icon-box
            %li.list
              = link_to new_group_path do
                = icon('fas', 'edit', class: 'icon-edit')
            %li.list
              = link_to edit_user_path(current_user.id) do
                = icon('fas', 'cog', class: 'icon-cog')
      .groups
        - current_user.groups.each do |group|
          .group
            = link_to group_messages_path(group) do
              %p.group__name
                = group.name
              %p.group__message
                = group.show_last_message
